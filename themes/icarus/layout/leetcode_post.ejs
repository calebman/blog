<div class="card widget">
    <div class="card-content" style="padding-bottom: 66px;">
        <h1 class="title is-size-3 is-size-4-mobile has-text-weight-normal" style="text-align: center;">
            <%= page.post.title %>
        </h1>
        <div id="article-content" class="project-introduce content" style="background-image: unset;">
            <%- page.post._content %>
        </div>
    </div>
    <a href="<%= page.post.url %>" target="_blank" title="<%= page.post.level %>">
        <div class="superscript">
            <div class="triangle <%= page.post.level %>"></div>
            <div class="desc"><%= page.post.level %></div>
        </div>
    </a>
</div>
<% if (has_config('comment.type')) { %>
<div class="card">
    <div class="card-content">
        <h3 class="title is-5 has-text-weight-normal"><%= __('article.comments') %></h3>
        <%- partial('comment/' + get_config('comment.type')) %>
    </div>
</div>
<% } %>
<style>

    .title {
        font-size: unset;
    }

    .number {
        background-color: unset;
        display: unset;
        font-size: unset;
        margin-right: unset;
        min-width: unset;
        padding: unset;
    }

    .superscript {
        position: absolute;
        top: 0px;
        right: 0px;
        width: 60px;
        height: 60px;
        overflow: hidden;
        color: #fff;
        cursor: pointer;
    }

    .superscript .triangle {
        width: 0;
        height: 0;
        border-top: 60px solid;
        border-left: 60px solid transparent;
    }

    .superscript .easy {
        border-top-color: rgb(62, 175, 124);
    }

    .superscript .normal {
        border-top-color: #ff8d1a;
    }

    .superscript .hard {
        border-top-color: #d43030;
    }

    .superscript .desc {
        position: absolute;
        top: 10px;
        right: 5px;
        z-index: 1;
        transform: rotate(45deg);
        -ms-transform: rotate(45deg);
        -moz-transform: rotate(45deg);
        -webkit-transform: rotate(45deg);
        -o-transform: rotate(45deg);
    }
</style>
<link rel="stylesheet" href="/css/article-nice.css">
<!-- Highlight.js -->
<script src="//cdn.bootcss.com/highlight.js/9.2.0/highlight.min.js"></script>
<script>
    hljs.initHighlightingOnLoad();
</script>