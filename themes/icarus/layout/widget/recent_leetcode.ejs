<% if (widget.recent.posts.length) { %>
<div class="card widget">
  <div class="card-content">
    <h3 class="menu-label is-size-6">
      推荐阅读
    </h3>
    <h3 class="tag is-link is-size-6">
      <%= widget.recent.name %>
    </h3>
    <div class="timeline">
      <% widget.recent.posts.forEach(post => { %>
      <article class="media">
        <div class="media-content">
          <div class="content">
            <a href="<%- url_for(post.path) %>" class="has-link-black-ter is-size-6"><%= post.title %></a>
          </div>
        </div>
      </article>
      <% }) %>
    </div>
  </div>
</div>
<% } %>